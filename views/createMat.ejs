    <div class="margin-5 justify">
        <h3>Tipo de Material:</h3>
        <select name="material_type" id="material_type">

        <option value="null">Elegir</option>

        <option value="Alambre">Alambre</option>
        <option value="Cadena">Cadena</option>
        <option value="Cordon">Cordon</option>
        <option value="Hilo">Hilo</option>
        <option value="Cristal">Cristal</option>
        <option value="Dije">Dije</option>
        <option value="Erraje">Erraje</option>
        <option value="Fimo">Fimo</option>
        <option value="Perlas">Perlas</option>
        <option value="Piedra">Piedras</option>
        <option value="Separador">Separador</option>
        <option value="Trancadero">Trancadero</option>
        <option value="Miyuki">Miyuki</option>

    
    </select> 
</div>
<div class="margin-5 justify">
    <h3>Â¿Se calcula por metro?</h3>
    
    <select name="meter" id="meter"  >
        <option value="n">No</option>
        <option value="y">Si</option>
    </select>
</div>
<div   class="margin-5 justify">
    <h3>Nombre del Material:</h3>
    <input type="text" name="material_name" id="material_name" placeholder="Nombre del Material">
</div>
<div  class="margin-5 justify">
    <h3>Valor en material por Unidad/Metro:</h3>
    <input  type="number" step="0.000001" name="material_value" id="material_value" placeholder="Valor del Material">
</div>
<div class="margin-5 justify">
    <button class="submit-btn " type="submit" id="insert">Insertar</button>
</div>

</body>
</html>
